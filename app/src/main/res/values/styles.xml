<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- style for AC, +/-, %  -->
    <style name="topThreeBtn" parent="@style/Theme.AppCompat">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:layout_margin">@dimen/_2pxh</item>
    </style>

    <style name="sideBtn" parent="@style/Theme.AppCompat">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:layout_margin">@dimen/_2pxh</item>
    </style>

    <style name="mainBtn" parent="@style/Theme.AppCompat">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:layout_margin">@dimen/_2pxh</item>
    </style>

    //splash theme
        <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
            <item name="android:windowBackground">@drawable/splash_background</item>
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor">#22252D</item>
        </style>


</resources>